<header class="site-header">
  <div class="wrap nav">
    <a class="brand" href="/">Nirnoy 2.0</a>
    <nav class="links">
      <a href="/doctors">Doctors</a>
      <% if (user && user.role==='patient') { %>
        <a href="/patient/dashboard">My dashboard</a>
      <% } %>
      <% if (user && user.role==='doctor') { %>
        <a href="/doctor/dashboard">Doctor dashboard</a>
        <a href="/doctor/intake">Intake</a>
      <% } %>
      <% if (user && user.role==='admin') { %>
        <a href="/admin/doctors">Admin</a>
      <% } %>
    </nav>
    <div class="auth">
      <% if (user) { %>
        <span><%= user.name %> (<%= user.role %>)</span>
        <a class="pill" href="/logout">Logout</a>
      <% } else { %>
        <a class="pill" href="/login">Login</a>
        <a class="pill" href="/register">Register</a>
      <% } %>
    </div>
  </div>
</header>
