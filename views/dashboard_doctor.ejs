<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Doctor Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('_header') %>
    <%- include('_flash') %>
    <main class="wrap" style="padding:24px 16px">
