<header class="site-header">
  <div class="wrap site-nav">
    <div class="nav">
      <div class="brand"><a href="/">Nirnoy</a></div>
      <div class="links">
        <a href="/doctors">For Patients</a>
        <a href="/doctor/register">For Doctors</a>
        <% if (user && user.role === 'patient') { %>
          <a href="/patient/dashboard">My Visits</a>
        <% } %>
        <% if (user && user.role === 'doctor') { %>
          <a href="/doctor/dashboard">Doctor Portal</a>
        <% } %>
        <% if (user && user.role === 'admin') { %>
          <a href="/admin/dashboard">Admin</a>
        <% } %>
      </div>
      <div class="auth">
        <% if (user) { %>
          <span><%= user.name || user.email %></span>
          <a href="/logout" class="pill">Logout</a>
        <% } else { %>
          <a href="/login" class="pill">Login</a>
          <a href="/register" class="pill">Sign up</a>
        <% } %>
      </div>
    </div>
  </div>
</header>
