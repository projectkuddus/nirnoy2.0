<header class="site-nav">
  <div class="site-nav__inner">
    <a class="site-nav__logo" href="/">Nirnoy</a>
    <nav class="site-nav__links">
      <a href="/">Home</a>
      <a href="/doctors">For Patients</a>
      <a href="/doctor/register">For Doctors</a>
      <% if (user && user.role==='patient') { %>
        <a href="/patient/dashboard">My Visits</a>
      <% } %>
      <% if (user && user.role==='doctor') { %>
        <a href="/doctor/dashboard">Doctor Portal</a>
      <% } %>
    </nav>
    <div class="site-nav__auth">
      <% if (user) { %>
        <span class="site-nav__user"><%= user.name||user.email %></span>
        <a class="btn ghost" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn ghost" href="/login">Login</a>
        <a class="btn primary" href="/register">Get Started</a>
      <% } %>
    </div>
  </div>
</header>
