<!doctype html><html><body>
<%- include('_header') %><%- include('_flash') %>
<div class="wrap">
  <h2>Clinics / Chambers</h2>
  <div class="card">
    <form method="post" action="/doctor/clinics/add" class="row">
      <input name="name" placeholder="Clinic name" required>
      <input name="area" placeholder="Area / Hospital">
      <input name="address" placeholder="Address">
      <button>Add clinic</button>
    </form>
  </div>
  <div class="row" style="margin-top:12px">
    <% rows.forEach(c=>{ %>
      <div class="card" style="flex:1 1 320px">
        <form method="post" action="/doctor/clinics/<%= c.id %>/update">
          <p><b>ID:</b> <%= c.id %></p>
          <p><input name="name" value="<%= c.name %>" style="width:100%"></p>
          <p><input name="area" value="<%= c.area||'' %>" style="width:100%"></p>
          <p><input name="address" value="<%= c.address||'' %>" style="width:100%"></p>
          <p>
            <button>Save</button>
            <a class="pill" href="/doctor/schedule?clinicId=<%= c.id %>">Edit schedule</a>
        </form>
            <form method="post" action="/doctor/clinics/<%= c.id %>/delete" style="display:inline" onsubmit="return confirm('Delete this clinic?')">
              <button>Delete</button>
            </form>
          </p>
      </div>
    <% }) %>
  </div>
</div>
<%- include('_footer') %>
</body></html>
