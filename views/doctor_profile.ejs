<%- include('partials/header') %>
<%- include('partials/flash') %>

<div class="wrap doctor-detail">
  <a href="/doctors" class="back-link">← Back to all doctors</a>

  <article class="doctor-hero">
    <% if (doctor.photo_url) { %>
      <div class="doctor-hero__photo">
        <img src="<%= doctor.photo_url %>" alt="Photo of <%= doctor.name %>" />
      </div>
    <% } %>

    <div class="doctor-hero__body">
      <p class="eyebrow">Doctor</p>
      <h1><%= doctor.name %></h1>

      <p class="doctor-hero__meta">
        <% if (doctor.specialty) { %>
          <span><%= doctor.specialty %></span>
        <% } %>
        <% if (doctor.area) { %>
          · <span><%= doctor.area %></span>
        <% } %>
      </p>

      <% if (doctor.bmdc_no) { %>
        <p class="doctor-hero__bmdc">BMDC: <%= doctor.bmdc_no %></p>
      <% } %>

      <% if (doctor.fee) { %>
        <p class="doctor-hero__fee">
          <strong>৳ <%= doctor.fee %></strong> per visit
        </p>
      <% } %>

      <div class="doctor-hero__actions">
        <a href="/book?doctorId=<%= doctor.uid %>" class="btn primary">
          Book an appointment
        </a>
      </div>
    </div>
  </article>

  <section class="doctor-detail__note">
    <h2>What to expect</h2>
    <p>
      After you book, Nirnoy guides you through a short symptom intake so your
      doctor sees your story before you enter the room.
    </p>
  </section>
</div>

<%- include('_footer') %>
