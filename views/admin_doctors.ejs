<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin — Doctors</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include('_header') %>
    <%- include('_flash') %>
    <div class="wrap">
      <h2>Admin — Doctors</h2>
      <h3>Pending</h3>
      <table><tr><th>Name</th><th>Email</th><th>BMDC</th><th>Proof</th><th>Actions</th></tr>
      <% pending.forEach(r=>{ %>
      <tr>
        <td><%= r.name %></td><td><%= r.email %></td><td><%= r.bmdc_no %></td>
        <td><% if (docs[r.id]) { %><a href="<%= docs[r.id] %>" target="_blank">View</a><% } else { %>-<% } %></td>
        <td>
          <form method="post" action="/admin/doctors/<%= r.id %>/approve" style="display:inline"><button>Approve</button></form>
          <form method="post" action="/admin/doctors/<%= r.id %>/reject" style="display:inline"><button>Reject</button></form>
        </td>
      </tr><% }) %></table>
      <h3>Approved</h3>
      <table><tr><th>Name</th><th>Email</th><th>BMDC</th><th>Proof</th></tr>
      <% approved.forEach(r=>{ %>
      <tr><td><%= r.name %></td><td><%= r.email %></td><td><%= r.bmdc_no %></td>
      <td><% if (docs[r.id]) { %><a href="<%= docs[r.id] %>" target="_blank">View</a><% } else { %>-<% } %></td></tr>
      <% }) %></table>
    </div>
    <%- include('_footer') %>
  </body>
</html>
