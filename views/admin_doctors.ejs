<!doctype html><html><body>
<%- include('_header') %><%- include('_flash') %>
<div class="wrap">
  <h2>Admin â€” Doctors</h2>

  <div class="card">
    <h3>Pending / Rejected</h3>
    <% if (!pending.length) { %><p>No pending/rejected doctors.</p><% } else { %>
    <table>
      <tr><th>Name</th><th>Email</th><th>Status</th><th>BMDC</th><th>Specialty</th><th>Area</th><th>Fee</th><th>Visit (min)</th><th>Actions</th></tr>
      <% pending.forEach(d=>{ %>
      <tr>
        <form method="post" action="/admin/doctors/<%= d.uid %>/update">
          <td><%= d.name %></td>
          <td><%= d.email %></td>
          <td><%= d.status %></td>
          <td><input name="bmdc_no" value="<%= d.bmdc_no %>" style="width:110px"></td>
          <td><input name="specialty" value="<%= d.specialty %>" style="width:140px"></td>
          <td><input name="area" value="<%= d.area %>" style="width:120px"></td>
          <td><input type="number" name="fee" value="<%= d.fee %>" style="width:90px" min="0"></td>
          <td><input type="number" name="visit_duration_minutes" value="<%= d.visit_duration_minutes %>" style="width:90px" min="5"></td>
          <td style="white-space:nowrap">
            <button>Save</button>
        </form>
            <form method="post" action="/admin/doctors/<%= d.uid %>/approve" style="display:inline"><button>Approve</button></form>
            <form method="post" action="/admin/doctors/<%= d.uid %>/reject" style="display:inline"><button>Reject</button></form>
          </td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </div>

  <div class="card" style="margin-top:16px">
    <h3>Approved</h3>
    <% if (!approved.length) { %><p>No approved doctors.</p><% } else { %>
    <table>
      <tr><th>Name</th><th>Email</th><th>BMDC</th><th>Specialty</th><th>Area</th><th>Fee</th><th>Visit (min)</th><th>Actions</th></tr>
      <% approved.forEach(d=>{ %>
      <tr>
        <form method="post" action="/admin/doctors/<%= d.uid %>/update">
          <td><%= d.name %></td>
          <td><%= d.email %></td>
          <td><input name="bmdc_no" value="<%= d.bmdc_no %>" style="width:110px"></td>
          <td><input name="specialty" value="<%= d.specialty %>" style="width:140px"></td>
          <td><input name="area" value="<%= d.area %>" style="width:120px"></td>
          <td><input type="number" name="fee" value="<%= d.fee %>" style="width:90px" min="0"></td>
          <td><input type="number" name="visit_duration_minutes" value="<%= d.visit_duration_minutes %>" style="width:90px" min="5"></td>
          <td style="white-space:nowrap">
            <button>Save</button>
          </td>
        </form>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </div>
</div>
<%- include('_footer') %>
</body></html>
