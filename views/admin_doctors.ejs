<tr><th>Name</th><th>Email</th><th>BMDC</th><th>Proof</th></tr>
<% approved.forEach(r=>{ %>
<tr>
  <td><%= r.name %></td>
  <td><%= r.email %></td>
  <td><%= r.bmdc_no %></td>
  <td><% if (docs[r.id]) { %><a href="<%= docs[r.id] %>" target="_blank">View</a><% } else { %>-<% } %></td>
</tr><% }) %>
</table>
</body></html>
