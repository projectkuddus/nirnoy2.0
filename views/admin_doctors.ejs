<!doctype html><html><body>
<h2>Admin: Doctors</h2>
<table border="1" cellpadding="6">
<tr><th>Name</th><th>Email</th><th>BMDC</th><th>Specialty</th><th>Chamber</th><th>Status</th><th>Actions</th></tr>
<% rows.forEach(r=>{ %><tr>
<td><%= r.name %></td><td><%= r.email %></td><td><%= r.bmdc_no||'' %></td>
<td><%= r.specialty||'' %></td><td><%= r.chamber||'' %></td><td><%= r.status %></td>
<td>
<form method="post" action="/admin/doctors/<%= r.user_id %>/approve" style="display:inline"><button>Approve</button></form>
<form method="post" action="/admin/doctors/<%= r.user_id %>/reject" style="display:inline"><button>Reject</button></form>
</td></tr><% }) %></table></body></html>
