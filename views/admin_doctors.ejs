<h3>Pending</h3>
<table border="1" cellpadding="6">
<tr><th>Name</th><th>Email</th><th>BMDC</th><th>Proof</th><th>Actions</th></tr>
<% pending.forEach(r=>{ %>
<tr>
  <td><%= r.name %></td>
